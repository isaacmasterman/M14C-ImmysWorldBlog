<main>
    {{#each posts}}
        <div class="blog-post">
            <div class="blog-post-header">
                <h2>{{this.title}}</h2>
                <p>{{this.author}} - {{this.date}}</p>
            </div>
            <div class="blog-post-content">
                {{this.content}}
            </div>
        </div>
    {{/each}}
</main>
